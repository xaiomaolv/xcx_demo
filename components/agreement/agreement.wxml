<!--components/agreement/agreement.wxml-->
<view class='mask' wx:if='{{showAgree}}' bindtap='clickMask'>
  <view class='modal-content' style='height:{{height}}'>
    <view class="pd-tb-10" style="width:90%; margin:0 auto;">隐私政策</view>
    <scroll-view scroll-y class='main-content'>
      <view class="pd-15">
        <text class="centent tx-jt">
          隐私政策
        </text>
      </view>
    </scroll-view>
    <view class='modal-btn-wrapper'>
      <view class='cancel-btn' style='color:rgba(7,17,27,0.6)' bindtap='cancel'>关闭</view>
      <view class='confirm-btn' style='color: #B81728;' bindtap='confirm'>已阅读</view>
    </view>
  </view>
</view>

