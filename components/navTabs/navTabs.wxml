<!--components/navTabs/navTabs.wxml-->
<!--
	customStyle 自定义css样式 
	scrollable 是否横向滚动
	lineOffsetLeft 当前选择的线条偏移量
	lineWidth 线条的宽度
  scrollable 是否滚动
-->

<view class="cl-tabs" style="{{customStyle}}">
  <scroll-view class="scroll-view scrollHeight" scroll-x="{{ scrollable }}" scroll-with-animation scroll-left="{{ scrollLeft }}">
    <view class="cl-tabs-nav {{scrollable ? 'cl-tabs-scroll' : 'cl-tabs-noscroll'}}">
      <view class="cl-tabs__line" style="width:{{lineWidth}}px;transform:translateX({{lineOffsetLeft}}px);-webkit-transform:translateX({{lineOffsetLeft}}px);transition-duration:0.3s;-webkit-transition-duration:0.3s">
      </view>
      <view wx:for="{{list}}" wx:key="index" data-index="{{index}}" class="cl-tab {{currentIndex==index ? 'cl-tab-active' : ''}}" data-item="{{item}}" data-opt="{{item.opt}}" bindtap="change" catchtap="swich">
        <text>{{item.name}}</text>
      </view>
    </view>
  </scroll-view>
</view>