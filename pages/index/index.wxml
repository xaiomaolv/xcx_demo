<!-- <view class="topCard"> -->
<view class="flex-row" style="background: white;padding-bottom: 20rpx;">
  <view class="flex-col-12">
    <image class="wine_img" src="{{wineInfo.w_img}}" mode="" />
  </view>
  <view class="flex-col-12 tx-ct">
    <!-- 评分 -->
    <view class="hot-rate" wx:for="{{wineInfo.rate}}" wx:key="index">
      <view class="ft-se-34">{{item.rate}}</view>
      <van-rate readonly color="#B81728" value="3" size="16" bind:change="onChange" />
      <view class="ft-se-14 mg-tp-4">{{item.num}}条评分</view>
    </view>
    <!-- 识别照片 -->
    <view class="takePhoto">
      <image class="" src="{{wineInfo.w_img}}" mode="" />
    </view>
    <!-- 参考价格 -->
    <view>
      <button size="mini" class="price_btn">
        ¥<text class="ft-se-16 mg-lt-5">{{wineInfo.price}}</text>
      </button>
      <view class="ft-se-12 clr-9797">*价格仅供参考</view>
    </view>
  </view>
</view>
<!-- 添加评分 -->
<view class="rateCard">
  <view class="flex-row flex-col-24">
    <van-button class="flex-col-12" size="" round custom-class="van_btn" icon="/img/mate/star.png">添加你的评分</van-button>
    <image class="circle" src="/img/mate/1.png" style="width: 40rpx;height: 40rpx;" mode="aspectFit"></image>
    <image class="circle" src="/img/mate/2.png" style="width: 40rpx;height: 40rpx;" mode="aspectFit"></image>
    <image class="circle" src="/img/mate/3.png" style="width: 40rpx;height: 40rpx;" mode="aspectFit"></image>
  </view>
  <!-- 酒名 -->
  <view class="mg-10-15">
    <view class="">{{wineInfo.w_name}}</view>
    <view class="clr-999 ft-se-12 flex-row">
      <image src="{{wineInfo.w_flag}}" mode="aspectFit" class="nationFlag" />
      <view class="mg-lt-5">{{wineInfo.w_origin}}</view>
    </view>
    <view class=" clr-999 ft-se-12">{{wineInfo.w_eng}}</view>
  </view>
  <!-- 推荐年份 -->
  <view class="mg-10-15">推荐年份</view>
  <view class="flex-row mg-10-15">
    <view class="flex-col-18 bds tx-ct" wx:for="{{recomeYear}}" wx:key="index">
      <view class="flex-col-6" style="width:100%">
        <view class="">{{item.year}}</view>
        <view class="">{{item.name}}</view>
        <view class="ft-se-12 clr-999">{{item.num}}</view>
      </view>
    </view>
  </view>
</view>
<!-- 编者注 -->
<view class="mg-tp-15 editCard">
  <view class="pd-tb-10 tx-ct">编者注</view>
  <view class="tx-jt mg-10 tx-ind">编者注编者注编者注编者注编者注编者注编者注编者注编者注编者注编者注</view>
  <view class="tx-ct">
    <image src="/img/mate/4.png" mode="aspectFit" style="height: 100rpx;width: 100rpx;border-radius: 50%;" />
    <view class="ft-se-14"> vivino </view>
    <view class="ft-se-14 clr-999"> 葡萄酒编辑 </view>
  </view>
</view>
<!-- 简介 -->
<view class="blurbCard">
  <view class="ft-bd mg-10-15 pd-tb-10 tx-ct">简介</view>
  <view class="row tx-ct">
    <button size="mini" wx:for="{{blurbHight}}" wx:key="index" bindtap="handleClick" data-myid="{{index}}" style="border-radius: 30rpx;border: 1rpx solid black;" class="mg-0-10 blud_btn{{blurbCurrent == index?'active':''}} ">{{item}}</button>
    <!-- <view class="box">
      <view wx:for="{{blurbHight}}" wx:key="index" bindtap="handleClick" data-myid="{{index}}" class="item {{blurbCurrent == index?'active':''}}">
        {{item}}
      </view>
    </view> -->
  </view>
  <view wx:if="{{blurbCurrent == 0}}">
    <view class="flex-row mg-15-25" wx:for="{{blurbList}}" wx:key="index">
      <image src="{{item.icon}}" mode="aspectFit" class="blud_logo" />
      <text class="mg-0-15">{{item.name}}</text>
    </view>
  </view>
  <view wx:if="{{blurbCurrent == 1}}">
    <view class="mg-15-25 tx-ct" wx:for="{{blurbList}}" wx:key="index">
      <text class="mg-0-15">{{item.name}}</text>
    </view>
  </view>
</view>
<!-- 口味特征 -->
<view class="flavourCard">
  <view class="mg-10-0 pd-tp-10">口味特征
    <text class="ft-se-14 clr-999">11143条评论</text>
  </view>
  <view class="row tx-ct mg-10-0" wx:for="{{flavourList}}" wx:key="index">
    <view class="flex-col-4">{{item.left}}</view>
    <view class="flex-col-16">
      <van-slider class="" disabled value="{{ item.flavourValue }}" min="0" inactive-color="#EBEDF0" active-color="#EBEDF0" use-button-slot bind:drag="onDrag" bar-height="14px">
        <view class="custom-button" slot="button">{{item.flavourValue}}</view>
      </van-slider>
    </view>
    <view class="flex-col-4">{{item.right}}</view>
  </view>
  <!-- 风味描述 -->
  <view class="mg-10-0 pd-tp-10">风味描述
    <text class="ft-se-14 clr-999">11143条评论</text>
  </view>
  <view class="flex-row" wx:for="{{blurbList}}" wx:key="index">
    <image src="{{item.icon}}" mode="aspectFit" class="blud_logo" />
    <view class="flex-col mg-0-15 bd-bt-flavour pd-tb-10">
      <view> {{item.name}} </view>
      <view class="ft-se-12 clr-999"> {{item.name}} <text class="clr-6dc">67</text>人觉得不错</view>
    </view>
  </view>
  <view class="tx-ct clr-pri mg-tp-20">查看更多</view>
</view>
<!-- 我的日志 -->
<view class="logCard">
  <view class="mg-10-0 pd-tp-10">我的日志
  </view>
  <view wx:for="{{logList.photo}}" wx:key="index">
    <van-cell is-link>
      <view slot="title">
        {{item.num}}
      </view>
      <van-icon slot="icon" name="{{item.icon}}" class="custom-icon" />
    </van-cell>
  </view>
  <view wx:for="{{logList.history}}" wx:key="index">
    <view class="flex-row">
      <image src="{{item.head}}" mode="aspectFit" class="avator" />
      <view class="flex-col mg-lt-10">
        <view>{{item.name}}</view>
        <view class="clr-999 ft-se-12">{{item.date}}</view>
      </view>
    </view>
    <view class="tx-lt mg-tp-5">
      <button class="log_rate mg-rt-10" round size="mini">
        <van-icon name="star" color="#FCB709" />
        <text class="clr-rate ft-se-12 mg-lt-5">{{item.rate}}</text>
      </button>
      <button class="log_btn" round size="mini">{{item.year}}</button>
    </view>
    <view class="ft-se-14">{{item.desc}}</view>
  </view>
</view>
<!-- 评价 -->
<view class="evaluateCard">
  <view class="ft-bd mg-10-15 pd-tb-10 tx-ct">评价</view>
  <!-- 评分排名 -->
  <view>
    <view class="clr-666 ft-se-14">评分排名</view>
    <!--点评笔记  -->
    <view class="flex-row mg-10-0">
      <view class="clr-666 ft-se-14 flex-col-12">点评笔记</view>
      <view class="clr-999 ft-se-12 flex-col-24 tx-rt">1132条评论</view>
    </view>
    <view class="tx-ct">
      <button size="mini" wx:for="{{evaluateHight}}" wx:key="index" bindtap="handleClick" data-myid="{{index}}" style="border-radius: 30rpx;border: 1rpx solid black;" class="mg-0-10 blud_btn{{blurbCurrent == index?'active':''}} ">{{item}}</button>
    </view>
    <view class="mg-tp-10" wx:for="{{logList.history}}" wx:key="index">
      <view class="flex-row">
        <image src="{{item.head}}" mode="aspectFit" class="avator" />
        <view class="flex-col mg-lt-10">
          <view>{{item.name}}</view>
          <view class="clr-999 ft-se-12">{{item.date}}</view>
        </view>
      </view>
      <view class="tx-lt mg-tp-5">
        <button class="log_rate mg-rt-10" round size="mini">
          <van-icon name="star" color="#FCB709" />
          <text class="clr-rate ft-se-12 mg-lt-5">{{item.rate}}</text>
        </button>
        <button class="log_btn" round size="mini">{{item.year}}</button>
      </view>
      <view class="ft-se-14">{{item.desc}}</view>
    </view>
    <view class="tx-ct clr-pri mg-tp-20">查看更多</view>
    <!-- 评酒视频 -->
    <view>
      <view class="mg-10-0 pd-tp-10">评酒视频
        <text class="ft-se-14 clr-999">11143条评论</text>
      </view>
    </view>
  </view>
</view>
